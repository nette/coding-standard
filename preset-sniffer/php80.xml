<?xml version="1.0"?>
<ruleset name="PHP 8.0" namespace="Nette">
	<rule ref="./php74.xml"/>

	<!-- Class names should be referenced via ::class constant when possible -->
	<rule ref="SlevomatCodingStandard.Classes.ModernClassNameReference">
		<properties>
			<property name="enableOnObjects" value="true"/>
		</properties>
	</rule>

	<!-- Commas after the last parameter in function or method declaration -->
	<rule ref="SlevomatCodingStandard.Functions.RequireTrailingCommaInDeclaration"/>
</ruleset>
