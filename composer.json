{
	"name": "nette/coding-standard",
	"license": "MIT",
	"require": {
		"php": "^7.1",
		"symplify/easy-coding-standard": "~3.1.0",
		"friendsofphp/php-cs-fixer": "2.9"
	},
	"require-dev": {
		"tracy/tracy": "^2.4"
	},
	"autoload": {
		"psr-4": {
			"Nette\\CodingStandard\\": "src"
		}
	},
	"scripts": {
		"test": [
			"ecs check src examples --config coding-standard-php56.neon",
			"ecs check src examples --config coding-standard-php70.neon",
			"ecs check src examples --config coding-standard-php71.neon"
		]
	}
}
