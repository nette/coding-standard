{
	"name": "nette/coding-standard",
	"license": "MIT",
	"require": {
		"php": "^7.1",
		"symplify/easy-coding-standard": "^2.1.7",
		"friendsofphp/php-cs-fixer": "^2.4",
		"slevomat/coding-standard": "^3.0"
	},
	"autoload": {
		"psr-4": {
			"Nette\\CodingStandard\\": "src"
		}
	},
	"scripts": {
		"cs": "vendor/bin/easy-coding-standard check src examples --config coding-standard-php71.neon",
		"fs": "vendor/bin/easy-coding-standard check src examples --config coding-standard-php71.neon --fix"
	}
}
